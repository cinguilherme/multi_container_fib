{
    "AWSEVDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "cinguilherme/multic-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name":"server",
            "image": "cinguilherme/multic-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "cinguilherme/multic-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "cinguilherme/multic-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "server",
                "client"
            ]
        }
    ]
}